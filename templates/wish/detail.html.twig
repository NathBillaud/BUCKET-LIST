{% extends 'base.html.twig' %}

{% block title %}Détail du vœu{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h2>{{ wish.title }}</h2>
        <p>{{ wish.description }}</p>
        <p>Auteur : {{ wish.author }}</p>
        <p>Category : {{ wish.category.name }}</p>
        <p>Créée le : {{ wish.dateCreated|date('d/m/Y H:i') }}</p>

        <div class="mt-4">
            <a href="{{ path('app_wish_list') }}" class="btn btn-secondary">← Retour à la liste</a>

            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_wish_update', {id: wish.id}) }}" class="btn btn-warning">Modifier</a>

            <form action="{{ path('app_wish_delete', {id: wish.id}) }}" method="post" style="display:inline;">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ wish.id) }}">
                <button class="btn btn-danger">Supprimer</button>
            </form>
            {% endif %}
        </div>
    </div>
{% endblock %}
