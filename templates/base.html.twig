<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Bucket-list{% endblock %}</title>
    <link rel="icon" type="image/png" href="{{ asset('images/favicon.png') }}">

    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('styles/style.css') }}">
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>

<body class="d-flex flex-column min-vh-100">

<header>
    {% block header %}
        <div class="container d-flex align-items-center">
            <img src="{{ asset('images/favicon.png') }}" alt="Logo" height="40">
            <h1>Bucket-List</h1>
        </div>
        <nav>
            <div class="container">
                <a class="navbar-brand" href="{{ path('app_home') }}">Home</a>
                <a class="navbar-brand" href="{{ path('app_about') }}">About us</a>
                <a class="navbar-brand" href="{{ path('app_wish_list') }}">List</a>

            </div>
        </nav>
    {% endblock %}
</header>

<main class="flex-fill">
    {% block body %}{% endblock %}
</main>

<footer>
    {% block footer %}
        <div>
            <p>Â©Bucket-List {{ "now"|date("Y") }}</p>
        </div>
    {% endblock %}
</footer>

</body>
</html>
